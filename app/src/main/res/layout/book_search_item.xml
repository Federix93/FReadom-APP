<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:algolia="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_margin"
            card_view:cardCornerRadius="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.example.android.lab1.BookCoverHitView
                    android:layout_width="92dp"
                    android:layout_height="142dp"
                    android:layout_margin="17dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/border_image"
                    android:src="@drawable/book_placeholder_thumbnail"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/search_book_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="24dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#000000"
                        android:text="Book Title"
                        android:textSize="18sp"
                        algolia:attribute='@{"title"}'
                        algolia:highlighted='@{true}'
                        algolia:layout_constraintStart_toStartOf="parent"
                        algolia:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/search_book_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#a6a6a6"
                        android:text="Book Author"
                        android:textSize="13sp"
                        algolia:attribute='@{"author"}'
                        algolia:highlighted='@{true}'
                        algolia:layout_constraintTop_toBottomOf="@+id/search_book_title"
                        card_view:layout_constraintStart_toStartOf="parent" />

                    <com.example.android.lab1.UserPictureHitView
                        android:id="@+id/search_user_picture"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="24dp"
                        android:scaleType="fitCenter"
                        algolia:layout_constraintBottom_toBottomOf="parent"
                        algolia:layout_constraintStart_toStartOf="parent"
                        algolia:srcCompat="@drawable/ic_person_black_24dp" />

                    <com.example.android.lab1.UserRatingHitView
                        android:id="@+id/userRatingHitView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginStart="6dp"
                        android:fontFamily="sans-serif-light"
                        android:text="5.0"
                        android:textSize="16sp"
                        algolia:layout_constraintBottom_toBottomOf="parent"
                        algolia:layout_constraintEnd_toEndOf="parent"
                        algolia:layout_constraintHorizontal_bias="0.01"
                        algolia:layout_constraintStart_toEndOf="@+id/search_user_picture" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="34dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_star"
                        algolia:layout_constraintBottom_toBottomOf="parent"
                        algolia:layout_constraintStart_toEndOf="@+id/userRatingHitView" />


                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>