    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:paddingEnd="@dimen/content_padding"
    android:paddingStart="@dimen/content_padding">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:src="@mipmap/profile_picture" />

    <io.techery.properratingbar.ProperRatingBar
        android:id="@+id/review_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_book_title"
        android:layout_marginStart="@dimen/content_padding"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/user_image"
        app:prb_tickNormalDrawable="@drawable/ic_star_full_16dp"
        app:prb_tickSelectedDrawable="@drawable/ic_star_selected_16dp" />

    <TextView
        android:id="@+id/review_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_book_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/review_rating"
        android:hint="quando" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/user_image"
        android:hint="@string/username"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/review_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/user_image"
        android:visibility="gone"
        android:hint="@string/title" />

    <TextView
        android:id="@+id/user_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_rating"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/user_image"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:hint="Testo della recensione" />


</RelativeLayout><!--</android.support.v7.widget.CardView>-->