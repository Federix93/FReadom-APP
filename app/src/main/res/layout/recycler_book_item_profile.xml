<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/book_card"
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="10dp">

                <!--<ImageView-->
                <!--android:id="@+id/cover"-->
                <!--style="@style/Cover"-->
                <!--android:layout_height="94dp"-->
                <!--android:src="@mipmap/profile_cover" />-->


                <TextView
                    android:id="@+id/rv_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Il Cacciatore di Aquiloni"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_anchorGravity="right|bottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rv_book_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="Riverhead Books"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_anchorGravity="right|center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_book_title" />

                <ImageView
                    android:id="@+id/rv_book_thumbnail"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/styled_book_thumbnail"
                    android:elevation="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book_placeholder_thumbnail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.031"
                    app:layout_constraintStart_toStartOf="parent" />

                <!--<me.zhanghai.android.materialratingbar.MaterialRatingBar-->
                <!--android:id="@+id/rv_book_rating_star"-->
                <!--style="@style/Widget.MaterialRatingBar.RatingBar"-->
                <!--android:layout_width="121dp"-->
                <!--android:layout_height="22dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:numStars="5"-->
                <!--android:rating="4.5"-->
                <!--app:layout_constraintEnd_toEndOf="parent"-->
                <!--app:layout_constraintHorizontal_bias="0.5"-->
                <!--app:layout_constraintStart_toStartOf="parent"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/rv_book_thumbnail" />-->

                <TextView
                    android:id="@+id/rv_book_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="right"
                    android:text="Napoli"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/position"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.529"
                    app:layout_constraintStart_toEndOf="@+id/rv_book_city"
                    app:srcCompat="@drawable/ic_location_on_black_24dp" />

            </android.support.constraint.ConstraintLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>